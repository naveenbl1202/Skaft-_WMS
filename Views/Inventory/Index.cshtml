@model IEnumerable<SkaftoBageriA.Models.Inventory>

<h2>Inventory List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Inventory</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Batch Number</th>
            <th>Quantity In Stock</th>
            <th>Reorder Point</th>
            <th>Product Name</th>
            <th>Supplier</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BatchNumber</td>
                <td>@item.QuantityInStock</td>
                <td>@item.ReorderPoint</td>
                <td>@item.Product?.ProductName</td>
                <td>@item.Supplier?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.InventoryId" class="btn btn-warning btn-sm">Edit</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.InventoryId" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
