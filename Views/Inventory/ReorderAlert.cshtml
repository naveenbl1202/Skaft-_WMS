@model IEnumerable<SkaftoBageriA.Models.Inventory>

<h2>Reorder Alerts</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">No items require reordering.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Batch Number</th>
                <th>Product</th>
                <th>Supplier</th>
                <th>Quantity in Stock</th>
                <th>Reorder Point</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BatchNumber</td>
                    <td>@item.Product?.ProductName</td>
                    <td>@item.Supplier?.Name </td>
                    <td>@item.QuantityInStock</td>
                    <td>@item.ReorderPoint</td>
                </tr>
            }
        </tbody>
    </table>
}
