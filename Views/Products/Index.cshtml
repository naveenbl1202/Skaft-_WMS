@model IEnumerable<SkaftoBageriA.Models.Product>

<h2>Products</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Reorder Point</th>
            <th>Supplier</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice.ToString("F2")</td> <!-- Format price to 2 decimal places -->
                <td>@product.ProductStock</td>
                <td>@product.ReorderPoint</td>
                <td>@product.Supplier.Name</td> <!-- Handle null supplier -->
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning btn-sm">Edit</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
