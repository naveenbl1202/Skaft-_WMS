@model SkaftoBageriA.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product - SkaftoBageriA</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- Modal -->
    <div class="modal fade show d-block" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color: #FFA500;">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProductModalLabel">Edit Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="form-group">
                            <label asp-for="ProductName" class="control-label">Product Name</label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductPrice" class="control-label">Product Price</label>
                            <input asp-for="ProductPrice" class="form-control" />
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductStock" class="control-label">Stock Quantity</label>
                            <input asp-for="ProductStock" class="form-control" />
                            <span asp-validation-for="ProductStock" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReorderPoint" class="control-label">Reorder Point</label>
                            <input asp-for="ReorderPoint" class="form-control" />
                            <span asp-validation-for="ReorderPoint" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SupplierId" class="control-label">Supplier</label>
                            <select asp-for="SupplierId" asp-items="@(ViewData["Suppliers"] as SelectList)" class="form-control">
                                <option value="">Select Supplier</option>
                            </select>
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const editProductModal = document.getElementById('editProductModal');

            // Close the modal when clicking outside it
            editProductModal.addEventListener('click', function (event) {
                if (event.target === editProductModal) {
                    window.location.href = "/"; // Redirect to home page
                }
            });

            // Close the modal with close button and redirect to home
            editProductModal.querySelector('.btn-close').addEventListener('click', function () {
                window.location.href = "/";
            });
        });
    </script>
</body>
</html>
